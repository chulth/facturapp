    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Facturapp",
            "request": "launch",
            "type": "python",
            "program": "${workspaceFolder:productdataapi}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "args": ["runserver", "0.0.0.0:8010"],
            "django": true,
            "cwd": "${workspaceFolder:productdataapi}",
            "console":"integratedTerminal"
        },

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}